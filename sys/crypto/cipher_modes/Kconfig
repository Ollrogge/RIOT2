config MODULE_CIPHER_MODES_CBC
    bool "Cipher CBC Mode"
    select MODULE_CIPHER_MODES

config MODULE_CIPHER_MODES_CCM
    bool "Cipher CCM Mode"
    select MODULE_CIPHER_MODES

config MODULE_CIPHER_MODES_CTR
    bool "Cipher CCM Mode"
    select MODULE_CIPHER_MODES

config MODULE_CIPHER_MODES
    bool "Modes for block ciphers"
    depends on MODULE_CRYPTO
    help
        Include common code for block cipher modes, such as CBC, ECB or OCB.
